<%= form_for(@list) do |f| %>
  <% if @list.errors.any? %>
      <div class="errors">
        <h2><%= pluralize(@list.errors.count, "error") %> prohibited this list from being saved:</h2>
        <ul>
          <% @list.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
  <%= f.label :name %> of event:
  <%= f.text_field :name %><br>
  <%= f.label :date %> of event (MM/DD/YYYY):
  <%= f.text_field :date %><br>
  Location:<br>
  <%= f.label :venue %>
  <%= f.text_field :street %><br>
  <%= f.label :city %>
  <%= f.text_field :city %><br>
  <%= f.label :state %> (abbreviation caps):
  <%= f.text_field :state %><br>
  <%= f.submit %>

<% end %>
